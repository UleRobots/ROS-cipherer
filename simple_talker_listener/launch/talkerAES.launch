<launch>
  <!-- AES, 3DES                                                            -->
  <arg name="ciphering" default="AES"/> 

  <!-- The secret key to use in the symmetric cipher.                       -->
  <!--   It must be 16 (AES-128), 24 (AES-192), or 32 (AES-256) bytes long. -->
  <!--   It must be 16 or 24 (3DES).                                        -->
  <arg name="secret_key" default="a1b2c3d4e5f6g7h8a1b2c3d4e5f6g7h8"/>
  
  <!-- The initialization vector to use for encryption or decryption.       -->
  <!--   It must be 16 for AES.                                             -->
  <!--   It must be 8 for DES.                                              -->
  <arg name="IV" default="12345678abcdefgh"/>

  <node name="talkerAES" pkg="simple_talker_listener" type="talkerAES.py" output="screen">
    <param name="ciphering" value="$(arg ciphering)" />
    <param name="secret_key" value="$(arg secret_key)" />
    <param name="IV" value="$(arg IV)" />
  </node>

</launch>
